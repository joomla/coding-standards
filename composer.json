{
  "name": "joomla/coding-standards",
  "description": "Composer installable Joomla Coding Standards Definitions.",
  "homepage": "http://joomla.github.io/coding-standards/",
  "keywords": [
    "phpcs",
    "standards",
    "Joomla"
  ],
  "license": "GPL2+",
  "require": {
    "squizlabs/php_codesniffer": "~2"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "codegyre/robo": "^0.6.0"
  },
  "minimum-stability": "RC",
  "support": {
    "issues": "https://github.com/joomla/coding-standards/issues"
  },
  "scripts": {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../../src",
    "post-update-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../../src"
  }
}
